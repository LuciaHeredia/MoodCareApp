<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Fragments_NewEntry.PickCalendarDay">

    <FrameLayout
        android:layout_width="380dp"
        android:layout_height="560dp"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorBlack"
        tools:context=".Fragments_Search.ByMood"
        android:layout_gravity="center"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="6"
        android:shadowColor="@color/colorBlack"
        tools:visibility="visible">

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"
            android:text="@string/choose_a_day"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/register_btn_wrapper"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_marginTop="90dp"
            android:background="@color/transparent2"
            android:layout_height="wrap_content">

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="fill_parent"
                android:layout_height="350dp"
                android:minDate="07/01/2020"/>

        </LinearLayout>

        <Button
            android:id="@+id/continueEntry"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-black"
            android:shadowDx="5"
            android:layout_marginTop="470dp"
            android:shadowDy="5"
            android:shadowRadius="6"
            android:text="@string/continue_string"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="bold" />

    </FrameLayout>

</RelativeLayout>